{
    "name": "sina42048/lara-pay",
    "description": "Iranian Payment Gateways , All in one !",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "payment",
        "gateway",
        "iran",
        "iranian",
        "pal",
        "bank",
        "card"
    ],
    "homepage": "https://github.com/sina42048/LaraPay",
    "authors": [
        {
            "name": "Sina Fathollahi",
            "email": "sinafat76@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "illuminate/support": "^8.42",
        "guzzlehttp/guzzle": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Sina42048\\LaraPay\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sina42048\\LaraPay\\Provider\\LaraPayServiceProvider"
            ],
            "aliases": {
                "LaraPay": "Sina42048\\LaraPay\\Facade\\Lapay"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
